rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection: Authenticated users can read all profiles (needed for "isFirstUser" check),
    // but can only write their own profile (or Admins can write all).
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }

    // Reports collection: Authenticated users can read/write
    match /reports/{reportId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated(); // Refine later if needed (e.g. only own reports or admin)
      allow delete: if isAdmin();
    }

    // Intervenants collection: Authenticated users can read, Admins can write
    match /intervenants/{intervenantId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
